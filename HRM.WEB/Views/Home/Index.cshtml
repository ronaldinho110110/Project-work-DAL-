@model HRM.Web.ViewModel.UserCredentialsVM
@{
    ViewBag.Title = Translation.SignIn;
}
@*@Html.Partial("_Navigation")*@
@Styles.Render("~/Content/Site/css")
<div class="container" align="center">
    <div class="panel-footer " style="width: 250px; border:1px solid black;">
        <div class="myform">
            @using (Html.BeginForm(MVCManager.Controller.Home.Index, MVCManager.Controller.Home.Name, FormMethod.Post, new { @class = "form-signin" }))
            {
                <h3 class="form-signin-heading">Please sign in or <a href="@Url.Action(MVCManager.Controller.Home.Register, MVCManager.Controller.Home.Name)">Join us</a></h3>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control input-lg", @placeholder = Translation.Email, @type = "email", @required = "true", @autofocus = "true", @maxlength = "128" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(p => p.Password, htmlAttributes: new { @class = "form-control input-lg", @placeholder = Translation.Password, @type = "password", @required = "true", @maxlength = "128" })
                </div>
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.RememberMe, htmlAttributes: new { @class = "checkbox-primary", })
                        Remember Me
                    </label>
                </div>
                <button class="btn btn-primary"  style="border:1px solid black;" align="right" type="submit">Sign in</button>
                @Html.ValidationMessage("credentials")

            }
</div>
        </div>
    </div>
